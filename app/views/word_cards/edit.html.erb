<% content_for :title, "ゲームカード編集 | VocaBoom!" %>

<h1>ゲームカード編集画面</h1>

<%= form_with model: [ @word_kit, @word_card ] do |f| %>

  <div>
    <%= f.label :english_word %>
    <%= f.text_field :english_word %>
  </div>

  <div>
    <%= f.label :japanese_translation %>
    <%= f.text_field :japanese_translation %>
  </div>
  <%= f.submit "更新" %>
<% end %>

<%= link_to '戻る', edit_word_kit_path(@word_kit) %>