<% content_for :title, "ログイン | Vocano!" %>

<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">ログイン</h1>

    <%= form_with url: login_path, data: { turbo: false }, class: "auth-form" do |f| %>
      
      <div class="input-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, placeholder: "example@vocano.com" %>
      </div>

      <div class="input-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, placeholder: "••••••••" %>
      </div>

      <div class="auth-actions">
        <%= f.submit "ログイン", class: "btn-main" %>
      </div>
    <% end %>

    <%= link_to "Googleでログイン", auth_at_provider_path(provider: :google), class: "btn btn-outline-primary" %>

    <div class="auth-footer">
      <%= link_to "新しくアカウントを作る", signup_path %>
      <%= link_to "パスワードをお忘れの方はこちら", new_password_reset_path %>
    </div>
  </div>
</div>