<h1>ゲームコード</h1>
<p><%= @game_room.game_code %></p>

<h2>残り時間</h2>
<div data-controller="timer">
  <p id="timer" data-timer-target="timer" data-time-limit="<%= @game_room.time_limit * 60 %>">
    <%= @game_room.time_limit %>:00
  </p>
</div>

<%= button_to "ゲーム終了!", finish_game_room_path(@game_room), method: :patch %>