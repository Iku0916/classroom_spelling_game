<% content_for :title, "新規登録| VocaBoom!" %>

<h1>新規登録</h1>

<%= form_with model: @user, url: signup_path do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>>

  <%= f.submit "新規登録" %>
<% end %>
