<% content_for :title, "新規登録 | Vocano!" %>

<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">新規登録</h1>

    <%= form_with model: @user, url: signup_path, data: { turbo: false }, class: "auth-form" do |f| %>
      
      <div class="input-group">
        <%= f.label :name, "ニックネーム" %>
        <%= f.text_field :name, placeholder: "ボカノ" %>
      </div>

      <div class="input-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, placeholder: "example@vocano.com" %>
      </div>
      
      <div class="input-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, placeholder: "8文字以上" %>
      </div>

      <div class="input-group">
        <%= f.label :password_confirmation, "パスワード確認" %>
        <%= f.password_field :password_confirmation, placeholder: "もう一度入力" %>
      </div>

      <div class="auth-actions">
        <%= f.submit "新規登録", class: "btn-main" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <%= link_to "すでにアカウントをお持ちの方", login_path %>
    </div>
  </div>
</div>