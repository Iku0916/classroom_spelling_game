  <ul class="main-buttons">
    <li>
      <% if logged_in? %>
        <%= link_to 'ゲームを開く', word_kits_path, class: "main-button" %>
      <% else %>
        <%= link_to 'ログインしてゲームを開く', login_path, class: "main-button highlight" %>
      <% end %>
    </li>

    <li>
      <% if logged_in? %>
        <%= link_to 'ゲームキットを作る', new_word_kit_path, class: "main-button" %>
      <% else %>
        <%= link_to 'ゲームキットを作る', login_path, class: "main-button" %>
      <% end %>
    </li>

    <li>
      <%= link_to 'ゲームに参加する', new_participant_path, class: "main-button secondary" %>
    </li>
  </ul>