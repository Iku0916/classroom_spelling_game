<% content_for :title, "パスワード再設定 | Vocano!" %>

<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">パスワード再設定</h1>

    <%= form_with model: @user,
                  url: password_reset_path(@token),
                  method: :patch,
                  data: { turbo: false },
                  class: "auth-form" do |f| %>

      <div class="input-group">
        <%= f.label :email, "メールアドレス" %>
        <div class="readonly-text"><%= @user.email %></div>
      </div>

      <div class="input-group">
        <%= f.label :password, "新しいパスワード" %>
        <%= f.password_field :password, placeholder: "••••••••" %>
      </div>

      <div class="input-group">
        <%= f.label :password_confirmation, "パスワード確認" %>
        <%= f.password_field :password_confirmation, placeholder: "••••••••" %>
      </div>

      <div class="auth-actions">
        <%= f.submit "パスワードを更新", class: "btn-main" %>
      </div>

    <% end %>
  </div>
</div>